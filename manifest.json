{
  "manifest_version": 3,
  "name": "YouTube RSS Extractor",
  "version": "1.1",
  "description": "아이콘 클릭 한 번으로 유튜브 채널의 RSS 주소를 복사합니다.",
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "RSS 주소 복사"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}